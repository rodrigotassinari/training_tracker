<%= form.text_field :speed_max, class: 'done-attribute gps-attribute' %>
<%= form.text_field :cadence_avg, class: 'done-attribute gps-attribute' %>
<%= form.text_field :cadence_max, class: 'done-attribute gps-attribute' %>
<%= form.text_field :calories, class: 'done-attribute gps-attribute' %>
<%= form.text_field :elevation_gain, class: 'done-attribute gps-attribute' %>
<%= form.text_field :temperature_avg, class: 'done-attribute gps-attribute' %>
