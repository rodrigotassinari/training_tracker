<% if workout.errors.any? %>
  <div id="error_explanation" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('.validation_errors', count: workout.errors.count) %></h3>
    </div>
    <% if workout.errors[:base].present? %>
      <div class="panel-body">
        <p><%= workout.errors[:base] %></p>
      </div>
    <% end %>
  </div>
<% end %>

<%= form.select :kind, Workout::KINDS.map { |kind| [Workout.human_attribute_name("kind.#{kind}"), kind]} %>

<%= form.text_field :scheduled_on, value: (l(workout.scheduled_on, format: :calendar) unless workout.scheduled_on.nil?), data: {mask: locale_mask('date')} %>

<% if workout.persisted? %>
  <%= form.text_field :occurred_on, value: (l(workout.occurred_on, format: :calendar) unless workout.occurred_on.nil?), data: {mask: locale_mask('date')} %>
<% end %>

<%= form.text_field :name %>
<%= form.text_area :description %>

