<div class="row">
  <div class="col-sm-12">
    <h1><%= t '.title' %></h1>
  </div>
</div>

<%= bootstrap_form_for(@workout) do |form| %>
  <div class="row">
    <div class="col-sm-8">
      <%= render partial: 'workouts/summary', locals: {workout: @workout, detailed: false} %>

      <% if @workout.errors.any? %>
        <div id="error_explanation" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t('.validation_errors', count: @workout.errors.count) %></h3>
          </div>
          <% if @workout.errors[:base].present? %>
            <div class="panel-body">
              <p><%= @workout.errors[:base] %></p>
            </div>
          <% end %>
        </div>
      <% end %>

      <% @workout.occurred_on ||= @workout.scheduled_on %>
      <%= form.text_field :occurred_on, value: (l(@workout.occurred_on, format: :calendar) unless @workout.occurred_on.nil?), data: {mask: locale_mask('date')}, autofocus: true %>

      <%= form.text_area :observations, class: 'done-attribute' %>
      <%= form.text_area :coach_observations, class: 'done-attribute' %>
      <%= form.text_field :weight_before, class: 'done-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :weight_after, class: 'done-attribute', data: {mask: locale_mask('decimal')} %>

      <%= form.text_field :distance_in_km, class: 'done-attribute gps-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :moving_time_in_hours, class: 'done-attribute gps-attribute', data: {mask: locale_mask('duration')} %>
      <%= form.text_field :elapsed_time_in_hours, class: 'done-attribute gps-attribute', data: {mask: locale_mask('duration')} %>
      <%= form.text_field :speed_avg, class: 'done-attribute gps-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :speed_max, class: 'done-attribute gps-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :cadence_avg, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :cadence_max, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :calories, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :elevation_gain, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :temperature_avg, class: 'done-attribute gps-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :temperature_max, class: 'done-attribute gps-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :temperature_min, class: 'done-attribute gps-attribute', data: {mask: locale_mask('decimal')} %>
      <%= form.text_field :watts_avg, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :watts_weighted_avg, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :watts_max, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :heart_rate_avg, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
      <%= form.text_field :heart_rate_max, class: 'done-attribute gps-attribute', data: {mask: locale_mask('integer')} %>
    </div>
    <div class="col-sm-4">
      <p><%= form.submit t('save'), data: {disable_with: t('saving')}, class: 'btn btn-info btn-lg btn-block' %></p>
      <p><%= link_to t('back'), workout_path(@workout), role: 'button', class: 'btn btn-default btn-block' %></p>
    </div>
  </div>
<% end %>
